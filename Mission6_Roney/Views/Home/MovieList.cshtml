@model List<Mission6_Roney.Models.Movie>

@{
    ViewData["Title"] = "Movie List";
}

<h2>Movie Collection</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Year</th>
        <th>Director</th>
        <th>Rating</th>
        <th>Edited</th>
        <th>Lent To</th>
        <th>Notes</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Title</td>
            <td>@movie.Category</td>
            <td>@movie.Year</td>
            <td>@movie.Director</td>
            <td>@movie.Rating</td>
            <td>@(movie.Edited ? "Yes" : "No")</td>
            <td>@movie.LentTo</td>
            <td>@movie.Notes</td>
        </tr>
    }
    </tbody>
</table>

<a asp-controller="Home" asp-action="AddMovie" class="btn btn-primary">Add a New Movie</a>