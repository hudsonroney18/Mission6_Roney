@using Mission6_Roney.Models
@model Movie
@{
    ViewData["Title"] = "Add a Movie";
}

<h2>Add a Movie to the Collection</h2>

<form asp-action="AddMovie" method="post">
    <!-- Category -->
    <div class="form-group">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" class="form-control" required />
    </div>

    <!-- Title -->
    <div class="form-group">
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <!-- Year -->
    <div class="form-group">
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" type="number" class="form-control" required />
    </div>

    <!-- Director -->
    <div class="form-group">
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" class="form-control" required />
    </div>

    <!-- Rating Dropdown -->
    <div class="form-group">
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating" class="form-control" required>
            <option value="">Select a Rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <!-- Edited Checkbox -->
    <div class="form-group form-check">
        <input asp-for="Edited" type="checkbox" class="form-check-input" />
        <label asp-for="Edited" class="form-check-label">Edited</label>
    </div>

    <!-- Lent To (Optional) -->
    <div class="form-group">
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" class="form-control" />
    </div>

    <!-- Notes (Optional, 25 character limit) -->
    <div class="form-group">
        <label asp-for="Notes">Notes (Max 25 characters):</label>
        <input asp-for="Notes" class="form-control" maxlength="25" id="Notes" />
        <small id="charCounter">25 characters remaining</small>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Add Movie</button>
</form>

<!-- Character Counter Script -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const notesInput = document.getElementById("Notes");
        const charCounter = document.getElementById("charCounter");

        if (notesInput && charCounter) {
            notesInput.addEventListener("input", function () {
                const remaining = 25 - notesInput.value.length;
                charCounter.textContent = remaining + " characters remaining";
                charCounter.style.color = remaining < 0 ? "red" : "black";
            });
        }
    });
</script>